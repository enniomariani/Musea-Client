{
  "name": "Media-Framework-Client",
  "author": "Ennio Mariani",
  "email": "mail@enniomariani.ch",
  "version": "1.0.0",
  "description": "Framework for media management and communication with app that contain the media-server-frameworks",
  "type": "module",
  "main": "./build/js/main/main.js",
  "scripts": {
    "test": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js ./tests --maxWorkers=50% --coverage --reporters jest-silent-reporter",
    "start": "electron-forge start",
    "prepackage": "node clean-build.js",
    "package": "npm run build && electron-forge package",
    "clean": "rimraf build/",
    "postbuild": "node fix-imports.js",
    "copy-files": "copyfiles -u 1 src/**/* build/ -e **/*.ts",
    "build": "npm run clean && tsc -b src && npm run copy-files"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "copyfiles": "^2.4.1",
    "electron": "^32.1.0",
    "electron-reloader": "^1.2.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-silent-reporter": "^0.6.0",
    "jest-websocket-mock": "^2.5.0",
    "memfs": "^4.9.3",
    "mock-fs": "^5.2.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "jsonschema": "^1.4.1",
    "ping": "^0.4.4"
  }
}
