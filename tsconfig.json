{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2022",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "main/*": ["src/mcf/main/*"],
      "renderer/*": ["src/mcf/renderer/*"],
      "mocks/*": ["src/mcf/mocks/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue",
    "renderer/mcf-ipc-globals.d.ts", "src/test-app-ipc-globals.d.ts"],
}