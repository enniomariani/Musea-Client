{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "__mocks__/*": ["tests/__mocks__/*"]
    },

    "outDir": "build",

    "noEmit": true
  },
  "include": [
    "src",
    "src/renderer/global.d.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "build"
  ]
}