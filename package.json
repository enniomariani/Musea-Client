{
  "name": "Media-Client-Framework",
  "author": "Ennio Mariani",
  "email": "mail@enniomariani.ch",
  "version": "1.0.3",
  "description": "Framework for media management and communication with app that contain the media-server-frameworks",
  "type": "module",
  "scripts": {
    "test": "node --no-warnings node_modules/jest/bin/jest.js ./tests --maxWorkers=50% --coverage",
    "dev": "cross-env NODE_ENV=development npm start",
    "start": "electron .",
    "clean": "rimraf build/",
    "copy-files": "copyfiles -u 1 daten/**/* build/daten",
    "build": "cls && npm run clean && tsc --b --verbose && npm run copy-files"
  },
  "exports": {
    "./main": {
      "types": "./build/mcf/main/index.d.ts",
      "default": "./build/mcf/main/index.js"
    },
    "./renderer": {
      "types": "./build/mcf/renderer/index.d.ts",
      "default": "./build/mcf/renderer/index.js"
    },
    "./preload": {
      "types": "./build/preload/index.d.ts",
      "default": "./build/preload/index.js"
    },
    "./mocks": {
      "default": "./tests/mocks/index.js"
    }
  },
  "files": [
    "build/mcf"
  ],
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/ping": "^0.4.4",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-websocket-mock": "^2.5.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "jsonschema": "^1.5.0",
    "ping": "^1.0.0"
  }
}
