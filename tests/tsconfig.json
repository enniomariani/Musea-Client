{
  "extends": "../tsconfig.node.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "baseUrl": "..",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node", "jest"],
    "paths": {
      "main/*": [
        "src/mcf/main/*"
      ],
      "renderer/*": [
        "src/mcf/renderer/*"
      ],
      "mocks/*": [
        "src/mcf/mocks/*"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "references": [
    {
      "path": "../src/mcf/renderer"
    },
    {
      "path": "../src/mcf/main"
    },
    {
      "path": "../src/mcf/mocks"
    }
  ]
}