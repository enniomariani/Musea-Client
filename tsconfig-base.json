{
  "compilerOptions": {
    "outDir": "./build",
    "declaration": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true
  }
}
