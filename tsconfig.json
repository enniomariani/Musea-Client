{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "composite": true,
    "declaration": true,

    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "baseUrl": ".",
    "paths": {
      "main/*": ["src/mcf/main/*"],
      "renderer/*": ["src/mcf/renderer/*"],
      "mocks/*": ["src/mcf/mocks/*"]
    }
  },
  "references": [
    {
      "path": "./src/mcf/main"
    },
    {
      "path": "./src/mcf/preload"
    },
    {
      "path": "./src/mcf/renderer"
    },
    {
      "path": "./src/mcf/mocks"
    },
    {
      "path": "./src/test-app/main"
    },
    {
      "path": "./src/test-app/preload"
    },
    {
      "path": "./src/test-app/renderer"
    },
    {
      "path": "./tests"
    }
  ],
  "exclude": ["**/build/**"],
  "files": []  // Important: prevents root config from compiling anything
}